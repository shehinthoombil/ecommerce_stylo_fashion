<!-- validation -->

<script>

    $(document).ready(function() {
        const signUpForm = $('#signup-form');
        const submitButton = signUpForm.find('button[type="submit"]');

        signUpForm.submit(function (event) {
            if (!validateForm()) {
						event.preventDefault();
			}
        })

        // Use input event to trigger validation on user input
        signUpForm.find('input').on('input', function() {
                validateForm();
        })

        function validateForm() {
            let isValid = true;

            // Clear existing error messages
            $('.error-message text-danger').text('');

            const username = $('#register-username').val();
            const email = $('#register-email').val();
			const mobile = $('#register-mobile').val();
			const password = $('#register-password').val();
            const confirmPassword = $('#register-conformpassword').val();

            // Validate username (non-empty)
            if(username.trim() === '') {
                $('#username-error').text('Please enter a username.');
				    isValid = false;
            }    

            // Validate email
            const emailRegex = /^[^\s@]+([@_.][^\s@]+)*@(gmail|yahoo|hotmail|outlook)\.[^\s@]+$/;
					if (!emailRegex.test(email)) {
						$('#email-error').text('Please enter a valid email address.');
						isValid = false;

                    }

            // Validate mobile number (numeric and length)
            const mobileRegex = /^[0-9]+$/;
					if (!mobileRegex.test(mobile) || mobile.length !== 10) {
						$('#mobile-error').text('Please enter a valid 10-digit mobile number.');
						isValid = false;
					}
                    
            // Validate password complexity
            const passwordRegex = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&*()_+])[0-9a-zA-Z!@#$%^&*()_+]{8,}$/;
					if (!passwordRegex.test(password)) {
						$('#password-error1').text('Password must be 8 characters long and include at least one uppercase letter, one lowercase letter, one special character, and one number.');
						isValid = false;
					}

            // Validate confirm password
            
                    if (confirmPassword !== password){
                        $('#confirmPassword-error1').text('ConfirmPassword must be same as password');
						isValid = false;
                        
                    }  else if(confirmPassword.trim()=="") {
                         $('#confirmPassword-error1').text('Please add confirm password');
                        isValid = false
                    }   else  {
                        isValid = true
                        $('#confirmPassword-error1').text("")
                    }
            
            // Enable/disable the submit button based on the overall validation status
            submitButton.prop('disabled', !isValid)

				return isValid;
        
        }
		
    });
</script>

